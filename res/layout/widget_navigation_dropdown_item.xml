<?xml version="1.0" encoding="utf-8"?>
<com.missionhub.ui.widget.NavigationItemView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.MissionHub.ListView.Item.Navigation" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.MissionHub.Widget.ActionBar.Title" />

        <TextView
            android:id="@+id/subtitle"
            style="@style/TextAppearance.MissionHub.Widget.ActionBar.Subtitle"
            android:textColor="@color/black" />
    </LinearLayout>

</com.missionhub.ui.widget.NavigationItemView>