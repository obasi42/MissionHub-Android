<com.missionhub.ui.widget.NavigationItemView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.MissionHub.ListView.Item.Navigation"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/icon"
            style="@style/Widget.MissionHub.ListView.Item.Navigation.Logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                style="@style/Widget.MissionHub.ListView.Item.Navigation.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/subtitle"
                style="@style/Widget.MissionHub.ListView.Item.Navigation.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>

</com.missionhub.ui.widget.NavigationItemView>