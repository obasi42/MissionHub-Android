<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_header"
    android:layout_width="fill_parent"
    android:layout_height="166dp"
    android:background="@drawable/mh_contact_top"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/contact_picture"
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:onClick="clickPicture"
        android:src="@drawable/facebook_question" >
    </ImageView>

    <LinearLayout
        android:id="@+id/contact_nameview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="TextView"
            android:textAppearance="?android:attr/textAppearanceLarge" >
        </TextView>

        <LinearLayout
            android:id="@+id/contact_buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/contact_phone"
                android:layout_width="47dp"
                android:layout_height="38dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/phone"
                android:onClick="clickPhone"
                android:visibility="gone" >
            </Button>

            <Button
                android:id="@+id/contact_sms"
                android:layout_width="47dp"
                android:layout_height="38dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/chat"
                android:onClick="clickSMS"
                android:visibility="gone" >
            </Button>

            <Button
                android:id="@+id/contact_email"
                android:layout_width="47dp"
                android:layout_height="38dp"
                android:background="@drawable/envelope"
                android:onClick="clickEmail"
                android:visibility="gone" >
            </Button>
        </LinearLayout>

        <Button
            android:id="@+id/contact_assign"
            android:layout_width="177dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/medium_button"
            android:enabled="false"
            android:onClick="clickAssign"
            android:text="@string/contact_assign_to_me"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:textStyle="bold" >
        </Button>
    </LinearLayout>

</LinearLayout>