<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <fragment
        android:id="@+id/people_my_category"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="75"
        android:name="com.missionhub.fragment.PeopleMyCategoryFragment" >

        <!-- Preview: layout=@layout/fragment_people_my_category -->
    </fragment>

    <fragment
        android:id="@+id/people_my_contact_list"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="25"
        android:name="com.missionhub.fragment.ContactListFragment" >

        <!-- Preview: layout=@layout/fragment_contact_list -->
    </fragment>

    <fragment
        android:id="@+id/people_my_contact"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="6"
        android:name="com.missionhub.fragment.ContactFragment" >
    </fragment>

</LinearLayout>