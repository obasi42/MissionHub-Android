<?xml version="1.0" encoding="utf-8"?>
<com.missionhub.ui.widget.NavigationItemView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.MissionHub.ListView.Item.SideNavigation" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            style="@style/Widget.MissionHub.ListView.Item.SideNavigation.Title" />

        <TextView
            android:id="@+id/subtitle"
            style="@style/Widget.MissionHub.ListView.Item.SideNavigation.Subtitle" />
    </LinearLayout>

</com.missionhub.ui.widget.NavigationItemView>
