<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@drawable/mh_background" android:id="@+id/contact">
	<ListView android:descendantFocusability="beforeDescendants" android:layout_width="fill_parent" android:fadeScrollbars="true" android:layout_alignParentLeft="true" android:layout_height="fill_parent" android:id="@+id/listview" android:layout_marginBottom="32dp" android:background="@color/white" android:cacheColorHint="@color/white"></ListView>
     <LinearLayout android:layout_width="fill_parent" android:layout_height="34dp" android:layout_alignParentBottom="true">
         <ToggleButton android:background="@drawable/bottom_bar_left" android:layout_width="wrap_content" android:layout_height="fill_parent" android:id="@+id/bottom_button_left" android:textOn="@string/contact_tab_contact" android:textOff="@string/contact_tab_contact" android:textColor="@color/white"  android:onClick="clickContact" android:layout_weight="1"></ToggleButton>
         <ToggleButton android:background="@drawable/bottom_bar_center" android:layout_width="wrap_content" android:layout_height="fill_parent" android:id="@+id/bottom_button_center" android:textOn="@string/contact_tab_more" android:textOff="@string/contact_tab_more" android:textColor="@color/white" android:onClick="clickMoreInfo" android:layout_weight="1"></ToggleButton>
         <ToggleButton android:background="@drawable/bottom_bar_right" android:layout_width="wrap_content" android:layout_height="fill_parent" android:id="@+id/bottom_button_right" android:textOn="@string/contact_tab_survey" android:textOff="@string/contact_tab_survey" android:textColor="@color/white" android:onClick="clickSurveys" android:layout_weight="1"></ToggleButton>
     </LinearLayout>
</RelativeLayout>