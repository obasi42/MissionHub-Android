<?xml version="1.0" encoding="utf-8"?>
<com.missionhub.ui.widget.ContactListItemView xmlns:android="http://schemas.android.com/apk/res/android"
    style="ListViewItem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/list_view_item_padding"
    android:paddingBottom="@dimen/list_view_item_padding"
    android:paddingLeft="@dimen/list_view_item_padding"
    >

    <ImageView
        android:id="@+id/picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:src="@drawable/default_contact" />

    <TextView
        android:id="@+id/name"
        android:layout_width="210.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="16.0dip"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="18dp" >
    </TextView>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:ellipsize="end"
        android:textColor="@color/dark_gray"
        android:textSize="14.0dip" >
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_weight="0.7"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <TextView
        android:id="@+id/updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:ellipsize="end"
        android:textColor="@color/dark_gray"
        android:textSize="14.0dip" >
    </TextView>

    <FrameLayout
        android:id="@+id/checkmark_container"
        android:layout_width="56.0dip"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical" >

        <ImageView
            android:id="@+id/checkmark"
            android:layout_width="16dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16.0dip"
            android:layout_marginRight="24.0dip"
            android:src="@drawable/btn_check_off_normal_holo_light" />
    </FrameLayout>

</com.missionhub.ui.widget.ContactListItemView>