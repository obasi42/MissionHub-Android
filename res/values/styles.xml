<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Widget.MissionHub.ActionBar" parent="Widget.Sherlock.ActionBar">
		<item name="background">@drawable/actionbar_background</item>
		<item name="android:background">@drawable/actionbar_background</item>
	</style>

	<style name="dashboard_name">
		<item name="android:shadowRadius">1.5</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowColor">@color/black</item>
		<item name="android:textSize">22dp</item>
		<item name="android:textColor">@color/light_gray</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="dashboard_organization">
		<item name="android:shadowRadius">1.5</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowColor">@color/black</item>
		<item name="android:textSize">16dp</item>
		<item name="android:textColor">@color/light_gray2</item>
	</style>

	<style name="dashboard_button">
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:drawablePadding">2dp</item>
		<item name="android:textSize">18dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/dashboard_label</item>
		<item name="android:background">@null</item>
	</style>

</resources>