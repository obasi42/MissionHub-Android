<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.Missionhub" parent="@style/Holo.Theme.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_missionhub
        </item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Missionhub</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Missionhub</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Missionhub</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Missionhub</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Missionhub</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_missionhub</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_missionhub
        </item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Missionhub
        </item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="ActionBar.Solid.Missionhub" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_missionhub</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_missionhub</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_missionhub</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Missionhub</item>
    </style>

    <style name="ActionBar.Transparent.Missionhub" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/ab_transparent_missionhub</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Missionhub</item>
    </style>

    <style name="Theme.Missionhub.Translucent.NoActionBar" parent="Theme.Missionhub.Translucent">
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="Theme.Missionhub.NoActionBar" parent="Theme.Missionhub">
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="Theme.Missionhub.Init" parent="@style/Holo.Theme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Missionhub.Widget" parent="@style/Holo.Theme">
        <item name="android:popupMenuStyle">@style/PopupMenu.Missionhub</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Missionhub</item>
    </style>

</resources>