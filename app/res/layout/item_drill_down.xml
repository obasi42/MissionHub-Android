<?xml version="1.0" encoding="utf-8"?>
<com.missionhub.ui.widget.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                android:orientation="horizontal"
                                                android:layout_width="fill_parent"
                                                android:minHeight="?android:attr/listPreferredItemHeight"
                                                android:layout_height="wrap_content">

    <TextView
            android:id="@android:id/text1"
            android:paddingLeft="8dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    <View
            android:id="@+id/divider"
            android:background="?android:attr/listDivider"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            />

    <com.missionhub.ui.widget.NoParentPressImageView
            android:id="@+id/next"
            android:layout_width="64dp"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_action_next_item"
            android:scaleType="center"
            android:clickable="true"
            android:background="@drawable/list_selector_holo_light"
            />

</com.missionhub.ui.widget.CheckableLinearLayout>