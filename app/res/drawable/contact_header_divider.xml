<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#C0C0C0"/>
        </shape>
    </item>
    <item
            android:top="0dp"
            android:bottom="-1dp"
            android:left="-1dp"
            android:right="-1dp">
        <shape android:shape="rectangle">
            <stroke
                    android:width="1dp"
                    android:color="#D6D6D6"/>
            <solid android:color="#00000000"/>
            <corners android:radius="0dp"/>
        </shape>
    </item>
    <item
            android:top="-1dp"
            android:bottom="0dp"
            android:left="-1dp"
            android:right="-1dp">
        <shape android:shape="rectangle">
            <stroke
                    android:width="1dp"
                    android:color="#797777"/>
            <solid android:color="#00000000"/>
            <corners android:radius="0dp"/>
        </shape>
    </item>
</layer-list>